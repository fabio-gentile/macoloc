{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="grid my-12 lg:my-0 lg:grid-cols-2 md:min-h-[578.55px]">
        <img src="{{ asset('images/authentication-image.webp') }}" alt="" class="hidden h-full lg:block w-full object-cover">
        <form class="flex items-center justify-center lg:px-8" method="post">
            <div class="border-input border rounded-lg p-6 grid gap-4">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="font-semibold text-xl">Se connecter</h1>
                <p class="text-muted">Entrez votre email et votre mot de passe pour vous connecter à votre compte</p>
                <div>
                    <label class="block" for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div>
                    <label class="block" for="password">Password</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >


        {#            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
        {#            See https://symfony.com/doc/current/security/remember_me.html#}
                <a href="{{ path('app_forgot_password_request') }}" class="text-muted text-sm">Mot de passe oublié</a>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me">Se souvenir
                        </label>
                    </div>
                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
                <div class="text-center text-sm">
                    Vous êtes nouveau ?
                    <a href="{{ path('app_register') }}" class="text-primary font-semibold">Créer un compte</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
