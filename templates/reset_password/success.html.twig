{% extends 'base.html.twig' %}

{% block title %}Mot de passe modifié{% endblock %}

{% block body %}
    {% embed 'partials/_authentication.html.twig' %}
        {% block form_content %}
            <form method="post" class="w-full max-w-lg">
                <div class="border-input border rounded-lg p-6 grid gap-4">
                    <div class="p-4 bg-ternary rounded-full w-fit mx-auto">
                        <twig:ux:icon name="lucide:check" class="w-8 object-contain" />
                    </div>
                    <h1 class="font-semibold text-xl">Mot de passe modifié</h1>
                    <p class="text-muted mt-1">Votre mot de passe a été modifié avec succès</p>

                    <a href="{{ path('app_homepage') }}" class="btn btn-primary">Revenir à l'accueil</a>
                </div>
            </form>
        {% endblock %}
    {% endembed %}
{% endblock %}
