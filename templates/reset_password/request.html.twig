{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    {% embed 'partials/_authentication.html.twig' %}
        {% block form_content %}
            <form method="post" class="w-full max-w-lg">
                <div class="border-input border rounded-lg p-6 grid gap-4">
                    {% if app.flashes %}
                        <div class="alert alert-danger" role="alert">Un problème est survenu lors de la validation de votre demande de réinitialisation de mot de passe. Le lien contenu dans votre e-mail est expiré ou invalide. Veuillez réessayer de réinitialiser votre mot de passe.</div>
                    {% endif %}

                    <h1 class="font-semibold text-xl">Mot de passe oublié</h1>
                    <p class="text-muted">Pas de soucis, nous vous enverrons des instructions de réinitialisation.</p>

                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}

                    <button class="btn btn-primary">Réinitialiser le mot de passe</button>
                    {{ form_end(requestForm) }}
                        <a href="{{ path('app_login') }}" class="flex gap-2.5 flex-row justify-center items-center">
                            <twig:ux:icon name="lucide:arrow-left" class="w-5 object-contain" />
                            <span class="text-center text-sm">Retour à la page de connexion</span>
                        </a>
                </div>
            </form>
        {% endblock %}
    {% endembed %}
{% endblock %}
