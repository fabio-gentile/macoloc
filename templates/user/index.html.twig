{% extends 'base.html.twig' %}

{% block title %}user.getFullname{% endblock %}

{% block body %}
    <div class="flex flex-col gap-8 wrapper !max-w-[800px] mt-8 md:mt-12">
        <h1 class="font-semibold text-2xl text-foreground">Profil de {{ user.getFullname }}</h1>
        <p class="text-muted">{{ user.getFullname }} a postÃ© {{ totalAds }} annonce{{ totalAds > 1 ? 's' : '' }}</p>

        <a href="{{ path('app_account_chat_new', { 'id': user.id }) }}" type="button" class="btn btn-primary w-fit">
            Envoyer un message
            <twig:ux:icon name="lucide:chevron-right" class="w-6 object-fit text-white" />
        </a>
        {% if totalAds > 1 %}
            <div class="flex flex-col gap-4">
                {#housing#}
                {% for housing in housings %}
                    {% include 'search/_housing.html.twig' with {
                        'today': today,
                    } %}
                {% endfor %}

                {#            tenant#}
                {% for tenant in tenants %}
                    {% include 'search/_tenant.html.twig' %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
